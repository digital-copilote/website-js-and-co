{
    "name": "jsandco",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "prettier": "prettier --write '**/*.{js,jsx,ts,tsx}'",
        "apollo:download-schema": "apollo client:download-schema schema.graphql",
        "apollo:generate-types": "rm -rf __generated__ && apollo client:codegen --target typescript --outputFlat",
        "apollo:sync": "npm run apollo:download-schema && npm run apollo:generate-types"
    },
    "dependencies": {
        "@apollo/client": "^3.4.7",
        "@reduxjs/toolkit": "^1.6.1",
        "emailjs-com": "^3.2.0",
        "framer-motion": "^4.1.17",
        "graphql": "^14.7.0",
        "next": "10.2.0",
        "next-compose-plugins": "^2.2.1",
        "prettier": "^2.2.1",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-query": "^3.5.16",
        "react-redux": "^7.2.4",
        "sass": "^1.32.5"
    },
    "devDependencies": {
        "@types/node": "^14.14.13",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-redux": "^7.1.16",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "apollo": "^2.32.1",
        "autoprefixer": "^10.1.0",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.2.0",
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "postcss": "^8.2.4",
        "tailwindcss": "^2.0.2",
        "typescript": "^4.1.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run lint -- --quiet --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
